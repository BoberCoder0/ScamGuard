<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/teal_200" />
                    <size
                        android:width="30dp"
                        android:height="30dp" />
                </shape>
            </item>
            <item android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp">
                <shape android:shape="oval">
                    <solid android:color="@color/white"/>
                    <size
                        android:width="30dp"
                        android:height="30dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item  android:state_enabled="true"  android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/gray" />
                    <size
                        android:width="30dp"
                        android:height="30dp" />
                </shape>
            </item>
            <item android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp">
                <shape android:shape="oval">
                    <solid android:color="@color/white"/>
                    <size
                        android:width="30dp"
                        android:height="30dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>