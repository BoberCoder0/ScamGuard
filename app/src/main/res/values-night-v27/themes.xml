<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Testapp2" parent="Base.Theme.Testapp2">
        <item name="colorPrimaryVariant">#BB86FC</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Темный фон StatusBar и NavigationBar -->
        <item name="android:statusBarColor">#121212</item>
        <item name="android:navigationBarColor">#121212</item>
        <!-- Светлые иконки в StatusBar (для темной темы) -->
        <item name="android:windowLightStatusBar">false</item>
        <!-- Светлые иконки в NavigationBar (если поддерживается) -->
        <item name="android:windowLightNavigationBar">false</item>

        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:background">@drawable/rounded_imagebutton_background</item>
        <item name="navigationIcon">@drawable/ic_back_white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>
</resources>