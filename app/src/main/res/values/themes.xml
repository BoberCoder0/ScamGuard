<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base theme light -->
    <style name="Base.Theme.Testapp2" parent="Theme.Material3.DayNight.NoActionBar" />

    <!-- Light theme -->
    <style name="Theme.Testapp2" parent="Base.Theme.Testapp2">
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- NoActionBar стиль -->
    <style name="Theme.Testapp2.NoActionBar" parent="Theme.Testapp2">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- PopupOverlay -->
    <style name="Theme.Testapp2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Экран настроек -->
    <style name="Theme.TestApp2.Settings" parent="Theme.Testapp2">
        <item name="android:background">@drawable/rounded_imagebutton_background</item>
        <item name="navigationIcon">@drawable/ic_back_white</item>
    </style>

    <!-- Если нужен инверсный стиль для настроек -->
    <style name="Theme.TestApp2.SettingsInvers" parent="Theme.TestApp2.Settings">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
