<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base theme light -->
    <style name="Base.Theme.Testapp2" parent="Theme.Material3.DayNight.NoActionBar" />

    <!-- Light theme -->
    <style name="Theme.Testapp2" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="actionMenuTextAppearance">@style/MyMenuTextAppearance</item>

        <item name="android:textColorPrimary">@color/black</item> <!-- Цвет текста для светлой темы -->
        <item name="actionMenuTextColor">@color/black</item> <!-- Цвет текста меню -->

        <!-- Белый фон StatusBar и NavigationBar -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:navigationBarColor">#F3EDF7</item>
        <!-- Темные иконки в StatusBar (для светлой темы) -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- Темные иконки в NavigationBar (если поддерживается) -->
        <item name="android:windowLightNavigationBar">true</item>

        <item name="android:windowBackground">@color/background_color</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- NoActionBar стиль -->
    <style name="Theme.Testapp2.NoActionBar" parent="Theme.Testapp2">
        <item name="actionMenuTextAppearance">@style/MyMenuTextAppearance</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- PopupOverlay -->
    <style name="Theme.Testapp2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Экран настроек -->
    <style name="Theme.TestApp2.Settings" parent="Theme.Testapp2">
        <item name="android:background">@drawable/rounded_imagebutton_background</item>
        <item name="navigationIcon">@drawable/ic_back_white</item>
    </style>

    <!-- Если нужен инверсный стиль для настроек -->
    <style name="Theme.TestApp2.SettingsInvers" parent="Theme.TestApp2.Settings">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
