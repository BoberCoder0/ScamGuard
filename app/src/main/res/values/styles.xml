<resources>

    <!-- Основная тема приложения с поддержкой дневной и ночной тем -->
    <style name="Theme.ScamGuard" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/center_color_app</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Цвета текста по умолчанию -->
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:textColorSecondary">@color/gray</item>

        <!-- Фон окна -->
        <item name="android:windowBackground">@color/background_color</item>

        <!-- Цвет статус-бара -->
        <item name="android:statusBarColor">@color/blue_dark</item>
        <!-- Цвет навигационной панели -->
        <item name="android:navigationBarColor">@color/blue_dark</item>

        <!-- Иконки статус-бара (темные для светлой темы) -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- Отключение стандартного ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Фон по умолчанию -->
        <item name="android:background">@drawable/rounded_imagebutton_background</item>

        <!-- Шрифт по умолчанию -->
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <!-- Тема для прозрачного Toolbar -->
    <style name="Theme.ScamGuard.TransparentToolbar" parent="Theme.ScamGuard">
        <item name="android:background">#80000000</item> <!-- Полупрозрачный черный -->
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:customNavigationLayout">@color/transparent</item>
    </style>

    <!-- Кнопки -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">#00003FCF</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/rounded_imagebutton_background</item>
    </style>

    <style name="Widget.App.NavButton" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:padding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">?attr/colorOnSurface</item>
        <item name="android:background">@drawable/rounded_imagebutton_background</item>
    </style>

    <style name="Theme.ScamGuard.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ScamGuard.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TextView_Style" />

    <style name="NavigationViewStyle" parent="Widget.Design.NavigationView">
        <item name="colorControlHighlight">@color/center_color_app</item>
    </style>

    <style name="AboutUsMenuItemStyle">
        <item name="android:layout_gravity">bottom|start</item>
    </style>

    <style name="TextView_Light">
        <item name="android:textColor">#000000</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="TextView_Dark">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="CustomSwitchStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="trackTint">@color/switch_track_color</item>
        <item name="thumbTint">@drawable/custom_thumb</item>
        <item name="android:thumbTextPadding">20dp</item>
        <item name="android:switchMinWidth">50dp</item>
        <item name="android:textOff">false</item>
        <item name="android:textOn">true</item>
        <item name="switchTextAppearance">@style/SwitchTextAppearance</item>
    </style>

    <style name="SwitchTextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <color name="switch_track_color">#00000000</color>

    <style name="TextViewStyleForNavigation">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@android:color/transparent</item>
        <item name="titleTextColor">@color/black</item>
        <item name="itemBackground">@android:color/transparent</item>
    </style>

    <style name="TransparentToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
        <item name="elevation">0dp</item> <!-- убирает тень -->
    </style>

    <style name="StatusBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:statusBarColor">@color/center_color_app</item>
        <item name="colorPrimaryDark">@color/center_color_app</item>
    </style>

</resources>
