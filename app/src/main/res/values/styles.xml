<resources>
    <style name="Theme.ScamGuard" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/design_default_color_primary_variant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:background">@drawable/rounded_imagebutton_background</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">#00003FCF</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item> <!-- добавляем размер текста -->
        <item name="android:background">@drawable/rounded_imagebutton_background</item>
    </style>

    <style name="Widget.App.NavButton" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:padding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">?attr/colorOnSurface</item>
        <item name="android:background">@drawable/rounded_imagebutton_background</item>
    </style>

    <style name="Theme.ScamGuard.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ScamGuard.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextView_Style">
    </style>

    <style name="NavigationViewStyle" parent="Widget.Design.NavigationView">
        <item name="colorControlHighlight">@color/center_color_app</item>
    </style>

    <!-- Стиль для элемента меню "О нас" -->
    <style name="AboutUsMenuItemStyle">
        <item name="android:layout_gravity">bottom|start</item>
    </style>

    <style name="TextView_Light">
        <item name="android:textColor">#000000</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="TextView_Dark">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="CustomSwitchStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="trackTint">@color/switch_track_color</item>
        <item name="thumbTint">@drawable/custom_thumb</item>
        <item name="android:thumbTextPadding">20dp</item>
        <item name="android:switchMinWidth">50dp</item>
        <item name="android:textOff">false</item>
        <item name="android:textOn">true</item>
        <item name="switchTextAppearance">@style/SwitchTextAppearance</item>
    </style>
    <style name="SwitchTextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>
    <color name="switch_track_color">#00000000</color>

    <style name="TextViewStyleForNavigation">
        <item name="android:textSize">18sp</item>
    </style>

</resources>