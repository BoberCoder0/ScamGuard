<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base theme dark -->
    <style name="Base.Theme.Testapp2" parent="Theme.Material3.DayNight.NoActionBar" />

    <!-- Dark theme -->
    <style name="Theme.Testapp2" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimaryVariant">#BB86FC</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="actionMenuTextAppearance">@style/MyMenuTextAppearance</item>

        <item name="android:textColorPrimary">@color/white</item> <!-- Цвет текста для тёмной темы -->
        <item name="actionMenuTextColor">@color/white</item> <!-- Цвет текста меню -->

        <!-- Темный фон StatusBar и NavigationBar -->
        <item name="android:statusBarColor">#121212</item>
        <item name="android:navigationBarColor">#4B00FF</item>
        <!-- Светлые иконки в StatusBar (для темной темы) -->
        <item name="android:windowLightStatusBar">false</item>
        <!-- Светлые иконки в NavigationBar (если поддерживается) -->
        <item name="android:windowLightNavigationBar">false</item>

        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:background">@drawable/rounded_imagebutton_background</item>
        <item name="navigationIcon">@drawable/ic_back_white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <!-- NoActionBar стиль -->
    <style name="Theme.Testapp2.NoActionBar" parent="Theme.Testapp2">
        <item name="actionMenuTextAppearance">@style/MyMenuTextAppearance</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- PopupOverlay -->
    <style name="Theme.Testapp2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Экран настроек -->
    <style name="Theme.TestApp2.Settings" parent="Theme.Testapp2">
        <item name="android:background">@drawable/rounded_imagebutton_background</item>
        <item name="navigationIcon">@drawable/ic_back_white</item>
    </style>

    <!-- Если нужен инверсный стиль для настроек -->
    <style name="Theme.TestApp2.SettingsInvers" parent="Theme.TestApp2.Settings">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
