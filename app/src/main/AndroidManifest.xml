<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/istockphoto_1143214655_1024x1024333333"
        android:label="@string/app_name"
        android:roundIcon="@drawable/istockphoto_1143214655_1024x1024333333"
        android:supportsRtl="true"
        android:theme="@style/Theme.Testapp2"
        tools:targetApi="31">
        <activity
            android:name=".Activity.BaseActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.InfoActivity"
            android:exported="false" /> <!-- Указываем активность AuthActivity как стартовую -->
        <activity
            android:name=".Activity.Account.AuthActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Testapp2.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Оставляем другие активности, но они не будут запускаться при старте -->
        <activity
            android:name=".Activity.Account.History"
            android:exported="false"
            android:label="@string/history_a"
            android:theme="@style/Theme.TestApp2.Settings" />
        <activity
            android:name=".Activity.Account.AccountActivity"
            android:exported="false"
            android:label="@string/account"
            android:theme="@style/Theme.TestApp2.Settings" />
        <activity
            android:name=".Activity.Settings"
            android:exported="false"
            android:label="@string/settings"
            android:theme="@style/Theme.TestApp2.Settings" />
        <activity
            android:name=".Activity.Learn"
            android:exported="false"
            android:label="@string/learn"
            android:theme="@style/Theme.TestApp2.Settings" />
        <activity
            android:name=".Activity.Search"
            android:exported="false"
            android:label="@string/search"
            android:theme="@style/Theme.TestApp2.Settings" /> <!-- Убираем фильтр MAIN и LAUNCHER для MainActivity, чтобы она не открывалась первым экраном -->
        <activity
            android:name=".Activity.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Testapp2.NoActionBar" />
    </application>

</manifest>